
<body class="background"></body>


<!-- Page Container -->
<div class="w3-container w3-content" style="max-width:1400px;margin-top:80px">    
  <!-- The Grid -->
  <div class="w3-row">
    
    <!-- Left Column -->
    <div class="w3-col m3">
      <!-- Accordion DON'T DELETE FOR NOW!!!!!!!!! -->
      <br>
    </div>
    <!-- End Left Column -->
    
    <!-- Middle Column -->
    <div class="w3-col m7">
      <div class="w3-row-padding">
        <div class="w3-col m12">
         
          <!-- Headline -->
          <h1 class="w3-text-white">Timeline</h1>
          <div class="w3-card w3-round-xlarge post-bgc">
            <div class="w3-container w3-padding">
              
              <!-- New Post -->
              <h6 class="w3-opacity"></h6>
              {{!-- <p contenteditable="true" class="w3-border w3-padding"></p> --}}

              <form class="login-margin-top" action="/posts" method="post" id="new-post-form">
                <input id="message" type="text" name="message" value="" placeholder="What's on your mind?">
                <input type="submit" value="Post" class="new-post-link w3-button w3-theme w3-round-large">
              </form>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Posts Overview -->
      {{#each posts}}
      <div class="posts w3-container w3-card post-bgc w3-round-xlarge w3-margin">
        <br>
        <div class="profile-pic">
          {{#if this.user_id.profile_picture}}
            <img alt="Avatar" id="timeline-profile-photo" class="w3-left w3-circle w3-margin-right" style="width:80px" src={{this.user_id.profile_picture}}> 
          {{else}}
            <img alt="Avatar" id="timeline-profile-photo" class="w3-left w3-circle w3-margin-right" style="width:80px" src="/images/cutie-pie.jpeg">
          {{/if}}
        </div>
        <h4>{{this.user_id.name}}</h4>
        
            
        <br>
        <hr class="w3-clear">
        <p>{{this.message}}</p>
        <div class="comments-container">
            <form action="/likes" method="post">
              <input type="hidden" name="post_id" value={{this._id}}>
              <input class="comments-buttons new-post-link w3-button w3-theme w3-margin-bottom w3-round-large like-button" type="submit" value="Like: {{this.likes.likes_array.length}}">
            </form>  
  {{!-- new div here --}}

        <button class="comments-buttons new-post-link w3-button w3-theme w3-margin-bottom w3-round-large" id="drop-down">Comment</button>

          <div class="drop-down-comments" id="drop-down-comments">
            <form id="new-comment-form" action="/comments" method="post">
              <input class="comments-input" id="comment" placeholder="comment" type="text" name="comment" value="" required>
              <input id="post_id" name="post_id" type="hidden" value="{{this._id}}">
              <i class="fa fa-comment"></i> <input class="comments-buttons new-post-link w3-button w3-theme w3-margin-bottom w3-round-large" type="submit" value="Comment">
            </form>

            <div class="comments">
              {{#each this.comments}}
                {{this.comment}}
              {{/each}}
            </div>
          </div>
        </div>
        

{{!-- end new div here --}}
      </div>  
        {{/each}}
